<% include header %>
<body>
    <div class="container">
        <h1 id="title">Please login to proceed</h1>
        <form id="loginForm" role="form" action="/login" method="post">
            <div class="form-group">
                <label for="email">Email id:</label>
                <input type="email" id="email" name="email" placeholder="your email id" class="form-control"><br>
                <label for="password">Password:</label>
                <input type="password" id="password" name="password" placeholder="your password" class="form-control"><br>
                <input class="btn btn-success" class="form-control" type="submit" id="login" value="Login">
            </div>
        </form>
    </div>
</body>